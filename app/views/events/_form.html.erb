<%= form_with(model: event, local: true) do |form| %>
  <% if event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.label :title, "Title" %> <br>
  <%= form.text_field :title, :required => true%> <br>

  <%= form.label :subtitle, "Subtitle" %> <br>
  <%= form.text_field :subtitle %> <br>

  <div id="editor"></div>
  <%= form.label :description, "Description" %> <br>
  <%= form.text_area :description %> <br>

  <%= form.label :year, "Year" %> <br>
  <%= form.number_field :year, :required => true%> <br>

  <%= form.label :logo, "Logo" %> <br>
  <%= form.file_field :logo, accept: 'image/png,image/gif,image/jpeg' %>

  <div class="actions">
    <%= form.submit "Upload" %>
  </div>

  <script>
    var quill = new Quill('#editor', {
      modules: {
        toolbar: [
          [{ header: [1, 2, false] }],
          ['bold', 'italic', 'underline'],
          ['image', 'code-block']
        ]
      },
      placeholder: 'Compose an epic...',
      theme: 'snow'  // or 'bubble'
    });
    console.log("Hello")
  </script>
<% end %>
